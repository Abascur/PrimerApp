<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context=".SecondActivity">


    <RelativeLayout
        android:id="@+id/relativeInfo"
        android:layout_width="307dp"
        android:layout_height="414dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp">


        <ImageView
            android:id="@+id/imagePerfil"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/ic_perfil"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/linearNro"
            android:layout_below="@+id/imagePerfil"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nro : "
                android:textStyle="bold"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textNro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/linearNro"
            android:id="@+id/linearNombre"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre : "
                android:textStyle="bold"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antonio"
                android:textSize="25sp"/>

        </LinearLayout>


        <CheckBox
            android:id="@+id/checkBoxConfirm"
            android:layout_below="@+id/linearNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="Confirmado" />

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBoxConfirm"
            android:layout_marginTop="132dp"
            android:background="@color/colorAccent"
            android:text="@string/volver"
            android:textColor="#ffff" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>